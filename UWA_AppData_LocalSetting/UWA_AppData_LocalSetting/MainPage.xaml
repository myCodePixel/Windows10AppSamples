<Page x:Class="UWA_AppData_LocalSetting.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:UWA_AppData_LocalSetting"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Name="g1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ComboBox x:Name="comboBox"
                  Width="515"
                  Height="54"
                  Margin="119,132,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  FontSize="33.333"
                  PlaceholderText="Select the background Color">
            <x:String>Red</x:String>
            <x:String>Green</x:String>
            <x:String>Yellow</x:String>
            <x:String>Aqua</x:String>
            <x:String>Bisque</x:String>
            <x:String>Blue</x:String>

        </ComboBox>
        <Button x:Name="button"
                Width="410"
                Height="59"
                Margin="160,262,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="button_Click"
                Content="Set Background Color"
                FontSize="33.333" />
    </Grid>
</Page>
