            <x:String>Terrain</x:String>
            <x:String>None</x:String>
        </ComboBox>
        <Maps:MapControl x:Name="map1" 
            MapServiceToken="lEB6NzQMI9SXYMJZQOHH~m_ktJ8zrr10ym-inZXVg1A~AjlI4lFuTWuPzhUCbHKZZqHtVbEe8rn6FT4Z_srCzMnk5trkFqFJXHYjSsUw5E9H" 
