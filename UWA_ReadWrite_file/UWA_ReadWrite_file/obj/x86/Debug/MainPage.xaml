<Page x:Class="UWA_ReadWrite_file.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:UWA_ReadWrite_file"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="ReadTextAsync"
                Margin="10,112,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                                           
                Content="ReadTextAsync" />
        <Button x:ConnectionId='2' x:Name="ReadBufferAsync"
                Margin="10,162,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                                             
                Content="ReadBufferAsync" />
        <Button x:ConnectionId='3' x:Name="ReadviaStream"
                Margin="10,212,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                                           
                Content="ReadViaStream" />
        <Button x:ConnectionId='4' x:Name="WriteTextAsync"
                Margin="10,262,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                                            
                Content="WriteTextAsync" />
        <Button x:ConnectionId='5' x:Name="WriteBufferAsync"
                Margin="10,312,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                                              
                Content="WriteBufferAsync" />
        <Button x:ConnectionId='6' x:Name="WriteviaStream"
                Margin="10,362,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                                            
                Content="WriteViaStream" />
        <TextBox x:ConnectionId='7' Name="txtbox"
                 Margin="224,112,168,120"
                 TextWrapping="Wrap" />

    </Grid>
</Page>

